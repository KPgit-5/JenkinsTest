pipeline {
    agent any
     tools {
        maven 'Maven-3.8.6' 
        }
    stages {
        stage('Notify Start') {
            steps {
                slackSend channel: 'kp-test', message: 'Job Started'
            }

        }
        stage("Test"){
            steps{
                // mvn test
                sh "mvn test"
                slackSend channel: 'kp-test', message: 'Tests executed'
                
            }
            
        }
        stage("Build"){
            steps{
                sh "mvn clean package"
                
            }
            
        }
        stage("Deploy on Test"){
            steps{
                // deploy on container -> plugin
                deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'kalpana', path: '', url: 'http://44.220.43.248:8080/')], contextPath: '/app', war: '**/*.war'
              
            }
            
        }
        stage("Deploy on Prod"){
             input {
                message "Should we continue?"
                ok "Yes we Should"
            }
            
            steps{
                // deploy on container -> plugin
                deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'pandey', path: '', url: 'http://3.239.72.57:8080/')], contextPath: '/app', war: '**/*.war'
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
             slackSend channel: 'kp-test', message: 'Success'
        }
        failure{
            echo "========pipeline execution failed========"
             slackSend channel: 'kp-test', message: 'Job Failed'
        }
    }
}
